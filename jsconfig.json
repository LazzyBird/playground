{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "paths": {
      "@datafactory/*": [
        "lib/datafactory/*"
      ],
      "@helpers/*": [
        "lib/helpers/*"
      ],
      "@fixtures/*": [
        "lib/fixtures/*"
      ],
      "@data_assets/*": [
        "lib/data_assets/*"
      ],
      "@monkeys/*": [
        "lib/monkeys/*"
      ]
    }
  },
  "include": [
    "tests/**/*",
    "lib/**/*",
    "test-unit/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}